@using Sanatorium.Core.Posts
@using Sanatorium.Core.Authors

@if (Post is null || Author is null)
{
    <Spinner/>
}
else
{
<div class="content-block">
    <!-- Start Post Thumbnail  -->
    <div class="post-thumbnail">
        <a href="@Post.PostLink">
            <img src="@Post.ImageUrl" alt="@Post.Title">
        </a>
    </div>
    <!-- End Post Thumbnail  -->

    <!-- Start Post Content  -->
    <div class="post-content">
        <div class="post-cat">
            <div class="post-cat-list">
                <a class="hover-flip-item-wrapper" href="#">
                    <span class="hover-flip-item">
                        <span data-text="@Post.MainTopic">@Post.MainTopic</span>
                    </span>
                </a>
            </div>
        </div>
        <h2 class="title">
            <a href="@Post.PostLink">@Post.Title</a>
        </h2>
        <!-- Post Meta  -->
        <div class="post-meta-wrapper with-button">
            <PostMeta Post="Post" Author="Author"/>
            <div class="read-more-button cerchio">
                <a class="axil-button button-rounded hover-flip-item-wrapper" href="@Post.PostLink">
                    <span class="hover-flip-item">
                        <span data-text="Læs">Læs</span>
                    </span>
                </a>
            </div>
        </div>
    </div>
    <!-- End Post Content  -->
</div>
}

@code {
    [Parameter]
    public Post? Post { get; set; }

    [Parameter]
    public Author? Author { get; set; }
}