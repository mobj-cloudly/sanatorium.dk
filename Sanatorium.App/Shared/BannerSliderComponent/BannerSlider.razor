@using Sanatorium.Core.Posts
@using Sanatorium.Core.Authors
@inject IJSRuntime JsRuntime

@if (PostAndAuthorList is null)
{
    <Spinner/>
}
else
{
    <h1 class="d-none">Sanatorium - Din kilde til velvære, sundhed og smertelindring</h1>
    <div class="slider-area bg-color-grey">
        <div class="axil-slide slider-style-1">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="slider-activation axil-slick-arrow">
                            @foreach (var (post, author) in PostAndAuthorList)
                            {
                                <BannerSlide Post="post" Author="author"/>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {

    [Parameter]
    public IEnumerable<KeyValuePair<Post, Author>>? PostAndAuthorList { get; set; }
}